<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/liveme"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/livemeicon" />

                    <TextView
                        android:id="@+id/livemevideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textStyle="italic|bold"
                        android:textAllCaps="false"
                        android:text="liveMe-Video" />

                    <TextView
                        android:id="@+id/chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="chat,new frie..." />

                    <TextView
                        android:id="@+id/inpurchase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:text="In-app purchase" />

                    <ImageView
                        android:id="@+id/download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_downward_black_24dp"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adobeicon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/adobe"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/adobe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textStyle="italic|bold"
                    android:textAllCaps="false"
                    android:text="Adobe" />

                <TextView
                    android:id="@+id/reader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="Reader for Sa.." />

                <TextView
                    android:id="@+id/adobepurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="In-app purchases" />

                <ImageView
                    android:id="@+id/download1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_downward_black_24dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/workouticon"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/workouticon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout Trainer"
                    android:textAllCaps="false"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/forsamsung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="For samsung |..." />

                <TextView
                    android:id="@+id/workoutpurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:text="In-app purchases" />

                <ImageView
                    android:id="@+id/download2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_downward_black_24dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/vsco"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:src="@mipmap/vscoicon" />

                <TextView
                    android:id="@+id/vscotext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="italic|bold"
                    android:textAllCaps="false"
                    android:text="VSCO for" />

                <TextView
                    android:id="@+id/samsung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="Samsung" />

                <TextView
                    android:id="@+id/vscopurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="In-app purchase" />

                <ImageView
                    android:id="@+id/download3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_downward_black_24dp"
                    android:layout_gravity="center" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>